<config
        xmlns="http://www.ehcache.org/v3"
        xmlns:jcache="http://www.ehcache.org/v3/jsr107">

    <!-- See http://www.ehcache.org/documentation/3.8/xml.html -->

    <service>
        <jcache:defaults default-template="defaultTemplate" enable-management="true" enable-statistics="true">
        </jcache:defaults>
    </service>

    <cache-template name="defaultTemplate">
        <expiry>
            <ttl unit="minutes">1</ttl>
        </expiry>
        <heap unit="entries">100</heap>
    </cache-template>

    <!-- Role is immutable -->
    <cache alias="com.toptal.screening.soccerplayermarket.domain.Role" uses-template="defaultTemplate">
        <expiry>
            <none/>
        </expiry>
    </cache>

</config>